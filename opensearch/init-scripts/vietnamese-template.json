{
  "index_patterns": ["*"],
  "settings": {
    "analysis": {
      "analyzer": {
        "vi_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding", "vietnamese_stop"]
        }
      },
      "filter": {
        "vietnamese_stop": {
          "type": "stop",
          "stopwords": "_vietnamese_"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text",
        "analyzer": "vi_analyzer",
        "search_analyzer": "vi_analyzer"
      },
      "content": {
        "type": "text",
        "analyzer": "vi_analyzer",
        "search_analyzer": "vi_analyzer"
      }
    }
  }
}
